# DB Config Information
POSTGRES_HOST=<Database-host-for-connections>
POSTGRES_PORT=<Database-port-for-connections>
POSTGRES_DB=<Database-name>
POSTGRES_SCHEMA=<Database-schema-name>

# DB Account for Recipe Scraper Service
RECIPE_SCRAPER_DB_USER=<Recipe-scraper-account-username>
RECIPE_SCRAPER_DB_PASSWORD=<Recipe-scraper-account-password>

# Spoonacular API Configuration
KROGER_API_CLIENT_ID=<Your-Kroger-API-client-ID>
KROGER_API_CLIENT_SECRET=<Your-Kroger-API-client-secret>
SPOONACULAR_API_KEY=<Your-Spoonacular-API-key>

# Redis Configuration (Cache - db=1)
REDIS_HOST=<Redis-host-for-connections>
REDIS_PORT=<Redis-port-for-connections>
REDIS_PASSWORD=<Redis-password>
REDIS_DB=<Redis-database-number>

# JWT Configuration (MUST match auth-service)
#   Only used if OAUTH2_INSTROSPECTION_ENABLED=false
JWT_SECRET=your-very-secure-secret-key-at-least-32-characters-long

# OAuth2 Service Configuration
OAUTH2_SERVICE_ENABLED=true
OAUTH2_SERVICE_TO_SERVICE_ENABLED=true
OAUTH2_INTROSPECTION_ENABLED=false
OAUTH2_CLIENT_ID=recipe-service-client
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret-here
